Proceso Taller3Ejerc2
	Definir altura, a, espacio, asterisco como Entero;
	altura <-10;
	a<-1;
	Mientras a <= altura Hacer
		Para espacio <-1 Hasta altura-a Con Paso 1 Hacer
			Escribir Sin Saltar " ";
		FinPara
		para asterisco<-1 Hasta a Con Paso 1 Hacer
			Escribir Sin Saltar "*";  
		FinPara
		Escribir " ";
		a<-a+1;
	FinMientras
	
	
FinProceso
